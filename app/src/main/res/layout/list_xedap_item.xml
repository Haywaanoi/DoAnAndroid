<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="13dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/imageXe"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/tvIdXe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id laptop"
        android:layout_marginLeft="3pt"
        app:layout_constraintStart_toEndOf="@id/imageXe"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTenXe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên laptop"
        android:layout_marginLeft="3pt"
        app:layout_constraintStart_toEndOf="@id/imageXe"
        app:layout_constraintTop_toBottomOf="@+id/tvIdXe"

        />

    <TextView
        android:id="@+id/tvGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_marginLeft="3pt"
        app:layout_constraintStart_toEndOf="@id/imageXe"
        app:layout_constraintTop_toBottomOf="@+id/tvTenXe"
        />
    <TextView
        android:id="@+id/tvLoaiXe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loai Xe"
        android:layout_marginLeft="3pt"
        app:layout_constraintStart_toEndOf="@id/imageXe"
        app:layout_constraintTop_toBottomOf="@+id/tvGia" />
    <Button
        android:id="@+id/btnSua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa"
        android:backgroundTint="#33CC99"
        app:layout_constraintStart_toEndOf="@id/imageXe"
        app:layout_constraintTop_toBottomOf="@+id/tvLoaiXe"
        app:layout_constraintEnd_toStartOf="@+id/btnXoa"
        app:layout_constraintBottom_toBottomOf="@id/imageXe"

        />

    <Button
        android:id="@+id/btnXoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:textColor="#660000"
        android:backgroundTint="#FF6699"
        app:layout_constraintStart_toEndOf="@id/btnSua"
        app:layout_constraintTop_toBottomOf="@+id/tvLoaiXe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageXe"

        />


</androidx.constraintlayout.widget.ConstraintLayout>